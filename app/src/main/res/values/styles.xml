<resources>

    <style name="HomeTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/HomeTabPage</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HomeTabPage" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MusicabinetButton" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">@color/masucabinet_button</item>
    </style>

    <style name="MusicabinetYellowButton" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">@color/musicabinet_yellow_button</item>
    </style>

    <!-- Style for TextInputLayout & EditText -->
    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_transparent_30</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="LoadingDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LessonListTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/LessonListTabPage</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LessonListTabPage" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_transparent_30</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LessonTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/LessonTabPage</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LessonTabPage" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_transparent_30</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MetronomeImageView">
        <item name="android:theme">@style/GreyRippleTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GreyRippleTheme">
        <item name="colorControlHighlight">@color/grey_969692</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="FacebookButton" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">@color/facebook_button_color</item>
    </style>

    <style name="GoogleButton" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">@color/google_button_color</item>
    </style>

    <style name="LinkedinButton" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">@color/linked_button_color</item>
    </style>

    <style name="InstagramButton" parent="Base.Widget.AppCompat.Button">
        <item name="background">@drawable/ic_rectangle</item>
    </style>


</resources>
