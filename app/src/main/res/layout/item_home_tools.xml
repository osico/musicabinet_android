<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:layout_marginEnd="16dp"
	android:layout_marginStart="16dp"
	app:cardBackgroundColor="@color/home_item_card_background"
	tools:layout_gravity="bottom"
	tools:layout_height="200dp"
	tools:layout_marginBottom="32dp">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/homeToolsRootLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="16dp"
			android:textSize="16sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Major Site Update" />

		<!-- Don't show correct ellipse in design but work normal on device/emulator(tnx Android team) -->
		<com.musicabinet.mobile.ui.view.MultilineEllipsizedTextView
			android:id="@+id/tvText"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="8dp"
			android:ellipsize="end"
			android:textSize="14sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tvTitle"
			tools:text="@string/stub_home_news_text" />

	</android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>