<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <com.musicabinet.mobile.ui.lessons.lesson.view.SoundView
        android:id="@+id/soundView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_f2f2ea"
            android:orientation="vertical">

            <com.musicabinet.mobile.ui.lessons.lesson.view.lesson.page.LessonPageView
                android:id="@+id/topPageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivLesson1"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ImageView
                android:id="@+id/ivLesson2"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ImageView
                android:id="@+id/ivLesson3"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ImageView
                android:id="@+id/ivLesson4"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <com.musicabinet.mobile.ui.lessons.lesson.view.lesson.page.LessonPageView
                android:id="@+id/bottomPageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>