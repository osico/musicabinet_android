<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bFacebook"
            style="@style/FacebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_facebook"
            android:text="@string/connect_facebook"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bLinkedId"
            style="@style/LinkedinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_linkedin"
            android:text="@string/connect_linkedin"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bInstagram"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_instagram"
            android:text="@string/connect_instagram"
            android:textAllCaps="false"
            android:theme="@style/InstagramButtonTheme" />

        <Button
            android:id="@+id/bVk"
            style="@style/VkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_vk"
            android:text="@string/connect_vk"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>