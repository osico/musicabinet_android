<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.musicabinet.mobile">

    <application
        android:name=".MusicabinetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.instrument.InstrumentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.cabinet.CabinetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.signup.user.SignUpUserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.signup.password.SignUpPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.signup.SignUpFinishActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.cabinet.password.CabinetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.cabinet.change.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.cabinet.SuccessChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.courses.CoursesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.lessons.list.LessonListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.AppBarWithoutShadow" />

        <activity
            android:name=".ui.lessons.lesson.LessonActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.lessons.lesson.dialog.LessonSelectActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />

        <activity
            android:name=".ui.lessons.lesson.info.LessonInformationActivity"
            android:label="@string/lesson_information_title"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.cabinet.social.web.WebAuthorizationActivity"
            android:label="@string/authorization"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.web.WebVideoActivity"
            android:label="@string/video_for_lesson"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.lessons.lesson.tonechord.ToneAndChordActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="55b4ddc0b0d079482c57d654d6e008482ea5b58d" />
    </application>

</manifest>